<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".UserLoginActivity">

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/user1button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User1"/>

        <Button
            android:id="@+id/user2button"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/user1button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User2"/>

        <Button
            android:id="@+id/user3button"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/user2button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User3"/>
        <Button
            android:id="@+id/user4button"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/user3button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User4"/>

    </RelativeLayout>

</RelativeLayout>